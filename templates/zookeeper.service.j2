# MANAGED_BY_ANSIBLE
[Unit]
Description=Zookeeper Daemon
Documentation=http://zookeeper.apache.org
Requires=network.target
After=network.target

[Service]    
Type=forking
WorkingDirectory={{zookeeper_install_dir}}
User={{zookeeper_user}}
Group={{zookeeper_user}}
ExecStart={{zookeeper_install_dir}}/bin/zkServer.sh start {{zookeeper_config_dir}}/zoo.cfg
ExecStop={{zookeeper_install_dir}}/bin/zkServer.sh stop {{zookeeper_config_dir}}/zoo.cfg
ExecReload={{zookeeper_install_dir}}/bin/zkServer.sh restart {{zookeeper_config_dir}}/zoo.cfg
TimeoutSec=30
Restart=on-failure

[Install]
WantedBy=default.target
